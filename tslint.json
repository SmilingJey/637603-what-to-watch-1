{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "quotemark": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "interface-name" : false,
      "member-access": false,
      "semicolon": [
        true,
        "always",
        "ignore-interfaces"
      ],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "ignore",
            "arrays": "ignore",
            "functions": "ignore",
            "typeLiterals": "ignore"
          },
          "esSpecCompliant": true
        }
      ]
    },
    "rulesDirectory": []
}
